<div class="page-header">
  <h1>Add a New Business Plan Competition</h1>
</div>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/competition", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "name", "What is the name of the competition?" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "affiliated_school", "Affiliated College or University?" %>
        <%= text_field_tag "affiliated_school", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "location", "Location" %>
        <%= text_field_tag "location", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "description", "Add a description" %>
        <%= text_field_tag "description", "", "class" => "form-control" %>
      </div>

      <%= submit_tag "Add This Competition", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/" %>

    </form>
</div>
</div>